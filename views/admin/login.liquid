{% layout 'admin-layout', route: 'login' %}
{% block content %}
  <div class="wr">
    <a class="btn muted" href="/">
      <i class="fal fa-arrow-left"></i>
      Back home
    </a>
    <div class="content">
      <div class="pw-block">
        <i class="fal fa-lock" aria-hidden="true"></i>
        <form action="/admin/login" method="POST">
          <label for="username" class="visually-hidden">Username</label>
          <input {% if page.toast.errorMessage %}class="error"{% endif %} type="text" name="username" placeholder="Username" required aria-required>

          <label for="password" class="visually-hidden">Password</label>
          <input {% if page.toast.errorMessage %}class="error"{% endif %} type="password" name="password" placeholder="Password" required aria-required>

          <button type="submit" name="submit" title="Login">
            <i class="fal fa-arrow-circle-right"></i>
            <span class="visually-hidden">Login</span>
          </button>
        </form>
      </div>
    </div>
    <p class="copyright">&copy; {{ site.copyright }}</p>
  </div>
{% endblock %}