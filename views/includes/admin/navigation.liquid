<div class="navigation flex d-vertical between a-center">
  <div class="logo">
    <a href="/admin/">
      <img src="/img/icon.png">
    </a>
  </div>
  <ul class="nav-items">
    {% for item in site.admin_menu %}
      <li class="nav-item">
        <a href="{{ item.url }}" class="btn btn__secondary btn__icon_text {% if page.title == item.title %}active{% endif %}">
          <i class="fal fa-{{ item.icon }}" aria-hidden="true"></i>
          {{ item.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
  <a class="btn btn__secondary" href="/admin/logout/">Logout</a>
</div>